<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}{% endblock %} </title>
        {% stylesheets 
            '@FklFranklinBundle/Resources/public/css/bootstrap.min.css'
            '@FklFranklinBundle/Resources/public/css/style.css'
        %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %} 
        {% block stylesheets %}{% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
    </head>
    <body>
        <div id="wrapper">
            <header id="header">
                <div class="top">
                    <div class="navbar navbar-inverse navbar-static-top" role="navigation">
                        <div class="container">

                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                                <a href="{{ path('homepage') }}" class="navbar-brand logo-top">Franklin Domotique</a>
                            </div>
                            <nav class="navbar-collapse collapse">
                                <ul class="nav navbar-nav navbar-right responsive-nav main-nav-list">
                                    <li><a href="{{ path('installationpage') }}" class="{% if app.request.attributes.get('_route') == 'installationpage' %}active{% endif %}">Nos installations</a></li>
                                    <li><a href="{{ path('produitpage') }}" class="{% if app.request.attributes.get('_route') == 'produitpage' %}active{% endif %}">Nos produits</a></li>
                                    <li><a href="{{ path('contactpage') }}" class="{% if app.request.attributes.get('_route') == 'contactpage' %}active{% endif %}">Nous contacter</a></li>
                                    <li><a href="{{ path('commandepage') }}" class="{% if app.request.attributes.get('_route') == 'commamndepage' %}active{% endif %}"><span class="glyphicon glyphicon-transfer"></span>Suivi de commande</a></li>

                                </ul>    
                            </nav>
                        </div>
                    </div>   
                </div>
            </header>

            <div id="message">
                {% block message %}{% endblock %}
            </div>
            {% block slideshow %}{% endblock %}
            <div id="content" class="container">   
                {% block body %}{% endblock %}
            </div>

            <footer id="footer">           
                <div class="container">
                    <nav class="navbar navbar-inverse" role="navigation">
                        <ul class="nav navbar-nav ">
                            <li><a href={{ path('mentionpage') }} class="">Infos legales</a></li>                      
                            <li><a href={{ path('mentionpage') }} class="">Crédits</a></li>                      
                            <li><a href={{ path('contactpage') }} class="">Contact</a></li>                      
                            <li><span>Créer par <a href="web-itech.com">Web Itech</a></span></li>
                            <li><span>Copyright 2014 Franklin domotique <span class="glyphicon glyphicon-copyright-mark"></span></span></li>
                        </ul>
                    </nav>
                </div>
            </footer>
        </div>

       {% javascripts
       '@FklFranklinBundle/Resources/public/js/jquery.1.11.0.min.js'
       '@FklFranklinBundle/Resources/public/js/bootstrap.min.js'
       '@FklFranklinBundle/Resources/public/js/script.js'
         %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
       {% endjavascripts %}
       {% block javascripts %}{% endblock %}

    </body>
</html>