{% extends 'FklFranklinBundle::admin.html.twig' %}

{% block contextualMenu %}

<div class="btn-group">
    <a href="{{ path('admin_product') }}" class="btn btn-default{%if 'admin_product' == app.request.attributes.get('_route')%} active{% endif %}">
        <span class="glyphicon glyphicon-list"></span>
        {% trans %}List{% endtrans %}
    </a>
    <a href="{{ path('admin_product_new') }}" class="btn btn-primary{%if 'admin_product_new' == app.request.attributes.get('_route')%} active{% endif %}">
        <span class="glyphicon glyphicon-plus"></span>
        {% trans %}New Product{% endtrans %}
    </a>
</div>

{% if entity is defined and entity.id %}
<div class="btn-group">
    <a class="btn btn-default {%if 'admin_product_show' == app.request.attributes.get('_route')%} active{% endif %}" href="{{ path('admin_product_show', {'id': entity.id}) }}">
        {% trans %}Show{% endtrans %}
    </a>
    <a class="btn btn-default {%if 'admin_product_edit' == app.request.attributes.get('_route')%} active{% endif %}" href="{{ path('admin_product_edit', {'id': entity.id}) }}">
        <span class="glyphicon glyphicon-edit"></span>
        {% trans %}Edit{% endtrans %}
    </a>
    <a class="btn btn-default {%if 'admin_product_delete' == app.request.attributes.get('_route')%} active{% endif %}" href="{{ path('admin_product_delete', {'id': entity.id}) }}">
        <span class="glyphicon glyphicon-remove"></span>
        {% trans %}Delete{% endtrans %}
    </a>    
</div>
<div class="btn-group">
    <a class="btn btn-primary" href="" data-toggle="modal" data-target="#form-new-image">
        {% trans %}New image{% endtrans %}
    </a>
</div>
{% endif %}


{% endblock contextualMenu %}