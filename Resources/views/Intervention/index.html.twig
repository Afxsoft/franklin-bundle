{% extends 'FklFranklinBundle:Intervention:common.html.twig' %}

{% set title = 'Intervention list'|trans %}

{% block body -%}
<div class="panel panel-default">
    <table class="table table-striped table-hover table-responsive">
        <thead>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <th>{% trans %}Title{% endtrans %}</th>
                <th>{% trans %}Date{% endtrans %}</th>
                <th>{% trans %}Price{% endtrans %}</th>
                <th>{% trans %}Address{% endtrans %}</th>
                <th>{% trans %}Zip{% endtrans %}</th>
                <th>{% trans %}City{% endtrans %}</th>
                <th>{% trans %}User{% endtrans %}</th>
                <th>{% trans %}Interventioncategory{% endtrans %}</th>
                <th><span class="glyphicon glyphicon-edit" title="{% trans %}Edit{% endtrans %}"></span></th>
                <th><span class="glyphicon glyphicon-remove" title="{% trans %}Delete{% endtrans %}"></span></th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
            <tr>
                <td><a href="{{ path('intervention_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td><a href="{{ path('intervention_show', { 'id': entity.id }) }}">{{ entity.title }}</a></td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td><a href="{{ path('intervention_show', { 'id': entity.id }) }}">{{ entity.price }}</a></td>
                <td><a href="{{ path('intervention_show', { 'id': entity.id }) }}">{{ entity.address }}</a></td>
                <td><a href="{{ path('intervention_show', { 'id': entity.id }) }}">{{ entity.zip }}</a></td>
                <td><a href="{{ path('intervention_show', { 'id': entity.id }) }}">{{ entity.city }}</a></td>
                <td><a href="{{ path('intervention_show', { 'id': entity.id }) }}">{{ entity.user }}</a></td>
                <td><a href="{{ path('intervention_show', { 'id': entity.id }) }}">{{ entity.interventionCategory }}</a></td>
                <td>
                    <a href="{{ path('intervention_edit', {'id': entity.id}) }}" title="{% trans %}Edit{% endtrans %}">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>
                </td>
                <td>
                    <a href="{{ path('intervention_delete', {'id': entity.id}) }}" title="{% trans %}Delete{% endtrans %}">
                        <span class="glyphicon glyphicon-remove"></span>
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    {% if pages %}
    <div class="panel-footer">
        {% include 'DevelopatheCrudBundle::pagination.html.twig' with {
            currentFilters: { },
            currentPage: page,
            paginationPath: "intervention",
            lastPage: pages,
            showAlwaysFirstAndLast: true
        } only %}
    </div>
    {% endif %}
</div>

{% endblock body %}

