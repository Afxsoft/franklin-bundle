{% extends 'FklFranklinBundle:Category:common.html.twig' %}

{% set title = 'Category list'|trans %}

{% block body -%}
<div class="panel panel-default table-responsive">
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <th>{% trans %}Name{% endtrans %}</th>
                <th><span class="glyphicon glyphicon-edit" title="{% trans %}Edit{% endtrans %}"></span></th>
                <th><span class="glyphicon glyphicon-remove" title="{% trans %}Delete{% endtrans %}"></span></th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_category_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td><a href="{{ path('admin_category_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>
                    <a href="{{ path('admin_category_edit', {'id': entity.id}) }}" title="{% trans %}Edit{% endtrans %}">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>
                </td>
                <td>
                    <a href="{{ path('admin_category_delete', {'id': entity.id}) }}" title="{% trans %}Delete{% endtrans %}">
                        <span class="glyphicon glyphicon-remove"></span>
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    {% if pages %}
    <div class="panel-footer">
        {% include 'DevelopatheCrudBundle::pagination.html.twig' with {
            currentFilters: { },
            currentPage: page,
            paginationPath: "admin_category",
            lastPage: pages,
            showAlwaysFirstAndLast: true
        } only %}
    </div>
    {% endif %}
</div>

{% endblock body %}

