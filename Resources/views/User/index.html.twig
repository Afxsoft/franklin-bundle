{% extends 'FklFranklinBundle:User:common.html.twig' %}

{% set title = 'User list'|trans %}

{% block body -%}
<div class="panel panel-default">
    <table class="table table-striped table-hover table-responsive">
        <thead>
            <tr>
                <th>{% trans %}Username{% endtrans %}</th>
                <th>{% trans %}Email{% endtrans %}</th>
                <th>{% trans %}Firstname{% endtrans %}</th>
                <th>{% trans %}Lastname{% endtrans %}</th>
                <th>{% trans %}Address{% endtrans %}</th>
                <th>{% trans %}Zipcode{% endtrans %}</th>
                <th>{% trans %}City{% endtrans %}</th>
                <th>{% trans %}Phone{% endtrans %}</th>
                <th><span class="glyphicon glyphicon-edit" title="{% trans %}Edit{% endtrans %}"></span></th>
                <th><span class="glyphicon glyphicon-remove" title="{% trans %}Delete{% endtrans %}"></span></th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_user_show', { 'id': entity.id }) }}">{{ entity.username }}</a></td>
                <td><a href="{{ path('admin_user_show', { 'id': entity.id }) }}">{{ entity.email }}</a></td>
                <td><a href="{{ path('admin_user_show', { 'id': entity.id }) }}">{{ entity.firstname }}</a></td>
                <td><a href="{{ path('admin_user_show', { 'id': entity.id }) }}">{{ entity.lastname }}</a></td>
                <td><a href="{{ path('admin_user_show', { 'id': entity.id }) }}">{{ entity.address }}</a></td>
                <td><a href="{{ path('admin_user_show', { 'id': entity.id }) }}">{{ entity.zipcode }}</a></td>
                <td><a href="{{ path('admin_user_show', { 'id': entity.id }) }}">{{ entity.city }}</a></td>
                <td><a href="{{ path('admin_user_show', { 'id': entity.id }) }}">{{ entity.phone }}</a></td>
                <td>
                    <a href="{{ path('admin_user_edit', {'id': entity.id}) }}" title="{% trans %}Edit{% endtrans %}">
                        <span class="glyphicon glyphicon-edit"></span>
                    </a>
                </td>
                <td>
                    <a href="{{ path('admin_user_delete', {'id': entity.id}) }}" title="{% trans %}Delete{% endtrans %}">
                        <span class="glyphicon glyphicon-remove"></span>
                    </a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    {% if pages %}
    <div class="panel-footer">
        {% include 'DevelopatheCrudBundle::pagination.html.twig' with {
            currentFilters: { },
            currentPage: page,
            paginationPath: "admin_user",
            lastPage: pages,
            showAlwaysFirstAndLast: true
        } only %}
    </div>
    {% endif %}
</div>

{% endblock body %}

