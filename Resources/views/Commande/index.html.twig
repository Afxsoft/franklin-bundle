{% extends 'FklFranklinBundle::base.html.twig' %}
{% block stylesheets %}
{% endblock %}  

{% block body %}
<h1>Suivi de commande</h1>
<hr>

<div id="suivicommand">
    <h3>Votre Commande :</h3>
    <form  class="form-inline" method="POST" role="form">
        <input type="text" name="sku" placeholder="RefÃ©rence ex: FEJOG996" class="form-control input-box">
        <button type="submit" class="btn btn-default">Rechercher</button>
    </form>

    <h3>Etat de la commande :</h3>
    <div class="progress progress-striped active">
        <div class="progress-bar"  role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style=" width:{{ percent * 33.3333333 }}%">
            <span class="sr-only">{{ percent * 33.3333333 }}% Complete</span>
        </div>
    </div>
 {% if status %}
    
    <span><span class="glyphicon glyphicon-ok"></span>{{ status }}</span>
{% else %}
    <span><span class="glyphicon glyphicon-info-sign"></span>Veuillez saisir une commande pour connaitre son etat</span>
{% endif %}
</div>
{% endblock %}

