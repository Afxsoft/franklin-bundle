{% extends 'FklFranklinBundle::base.html.twig' %}
{% block stylesheets %}
{% endblock %}  

{% block body %}
<div class="produit-liste">
    <h1>Nos installation</h1>
    <div class="row" >
        
            {% for installation in installations %}

        <div class="col-md-3">
            <div class="item">
                <iframe  width = "100%" height ="70%" src="{{ installation.video }}" frameborder="0" allowfullscreen></iframe>
                <div class="item-content">
                    <div class="item-top-content">
                        <div class="item-top-content-inner">
                            <div class="item-product">
                                <div class="item-top-title">
                                    <h5>   {{ installation.name }} </h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="item-add-content">
                        <div class="item-add-content-inner">
                            <div class="section">
                                <br>
                                <a href="{{ path('produitpagefull', {'id': installation.product.id}) }}" class="btn btn-primary custom-button green-btn">Voir la fiche produit</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        
            {% endfor %}

    </div>
{% endblock %}

{% block javascripts %}

{% endblock %}


